using System;
namespace z2
{



    class Program
    {
        static void Main(string[] args)
        {
            float x = 1;
            int max = 2;
            float dx = 0.025f; // крок
            while (x <= max)
            {
                float y = (float)Math.Log2(x);

                Console.WriteLine("\n x = " + x);
                Console.WriteLine("функцiя y = " + y);


                x += dx;

            }
        }
    }
}
